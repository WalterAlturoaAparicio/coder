html 
    head 
        title PUG
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    body 
        form(action="/productos" method="POST" style="width: 20%; margin: 20px;")
            h4(style="color: #0000ff; font-weight: bold; padding-bottom: 20px;") Ingrese el Producto 
            div(class="form-group") 
                label(for="title" style="font-weight: bold;") Title 
                input(type="text" name="title" placeholder="Enter Title" class="form-control" required)
            div(class="form-group") 
                label(for="price" style="font-weight: bold;") Price 
                input(type="number" name="price" class="form-control" required)
            div(class="form-group") 
                label(for="thumbnail" style="font-weight: bold;") Thumbnail Link
                input(type="text" name="thumbnail" placeholder="Enter Thumbnail Link" class="form-control" required)
            div
                button(type="submit" class="btn btn-success") Guardar
    a(href="/productos" style="margin-left: 20px;") 
        button(class="btn btn-primary") Productos
